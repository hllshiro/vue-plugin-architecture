{
  "name": "vue-plugin-architecture",
  "version": "0.1.0",
  "description": "Vue 3 + TypeScript 插件化架构系统",
  "type": "module",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": " pnpm --filter @vue-plugin-arch/demo dev",
    "build": "pnpm build:types && pnpm build:core && pnpm build:vite-plugin && pnpm build:plugins",
    "build:types": "pnpm --filter @vue-plugin-arch/types build",
    "build:core": "pnpm --filter @vue-plugin-arch/core build",
    "build:vite-plugin": "pnpm --filter @vue-plugin-arch/vite-plugin build",
    "build:plugins": "pnpm --filter @vue-plugin-arch/plugin-* build",
    "build:demo": "pnpm --filter @vue-plugin-arch/demo build",
    "build:all": "pnpm build && pnpm build:demo",
    "preview": " pnpm --filter @vue-plugin-arch/demo preview",
    "type-check": "pnpm -r type-check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r clean",
    "prepare": "husky",
    "publish": "pnpm --filter @vue-plugin-arch/types --filter @vue-plugin-arch/core --filter @vue-plugin-arch/vite-plugin publish",
    "publish:dry": "pnpm --filter @vue-plugin-arch/types --filter @vue-plugin-arch/core --filter @vue-plugin-arch/vite-plugin publish --dry-run"
  },
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@eslint/js": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^9.33.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "typescript": "catalog:",
    "vue-eslint-parser": "^10.2.0"
  }
}
